            </Menu>
         </menus>
      </MenuBar>
   </bottom>
   
   <!-- Informações sobre destino da doação -->
   <right>
      <VBox alignment="CENTER" prefWidth="220.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Sua doação nos ajudará com:" wrapText="true" textAlignment="CENTER">
